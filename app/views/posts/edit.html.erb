<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">

<h3>Edit</h3>

<%= form_for @post, url: {action: "update" } do |p| %>
  <div class="form-group">
    <%= p.label :title %>
    <%= p.text_field :title, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= p.label :body %>
    <%= p.text_area :body, class: 'form-control' %>
  </div>
  
  <%= p.submit "Submit", class: 'btn btn-success' %>
<% end %>

    </div>
  </div>
</div>