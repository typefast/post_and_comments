<h2><%= @post.title %></h2>
<p><%= @post.body %></p>

<p><%=link_to "Edit", edit_post_path %></p>

<h3>Add Comment</h3>

<%= form_for [@post, @post.comments.build] do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit "Submit" %>
  
<% end %>